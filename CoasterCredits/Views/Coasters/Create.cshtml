@model CoasterCredits.Models.Coaster

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Coaster</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CoasterName" class="control-label"></label>
                <input asp-for="CoasterName" class="form-control" />
                <span asp-validation-for="CoasterName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CoasterPark" class="control-label"></label>
                <select asp-for="CoasterPark" class="form-control">
                @foreach(Park p in ViewBag.Parks)
                {
                    <option value="@p.ParkName">@p.ParkName</option>
                }
                </select>
                <span asp-validation-for="CoasterPark" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CoasterManufacturer" class="control-label"></label>
                <select asp-for="CoasterManufacturer" class="form-control">
                    @foreach (Manufacturer m in ViewBag.Manufacturers)
                    {
                        <option value="@m.ManufacturerName">@m.ManufacturerName</option>
                    }
                </select>
                <span asp-validation-for="CoasterManufacturer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CoasterStatus" class="control-label"></label>
                <select asp-for="CoasterStatus" class="form-control">
                    <option value="Open">Open</option>
                    <option value="UnderConstruction">Under Construction</option>
                    <option value="SBNO">SBNO</option>
                    <option value="Removed">Removed</option>
                    <option value="Relocated">Relocated</option>
                </select>
                <span asp-validation-for="CoasterStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CoasterType" class="control-label"></label>
                <select asp-for="CoasterType" class="form-control">
                    <option value="Wooden">Wooden</option>
                    <option value="Steel">Steel</option>
                    <option value="Hybrid">Hybrid</option>
                </select>
                <span asp-validation-for="CoasterType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CoasterStyle" class="control-label"></label>
                <select asp-for="CoasterStyle" class="form-control">
                    <option value="Sitdown">Sitdown</option>
                    <option value="Inverted">Inverted</option>
                    <option value="Standup">Standup</option>
                    <option value="Flying">Flying</option>
                    <option value="Wing">Wing</option>
                    <option value="Swinging">Swinging</option>
                    <option value="Bobsled">Bobsled</option>
                </select>
                <span asp-validation-for="CoasterStyle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CoasterHeight" class="control-label"></label>
                <input type="number" asp-for="CoasterHeight" class="form-control" />
                <span asp-validation-for="CoasterHeight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CoasterLength" class="control-label"></label>
                <input type="number" asp-for="CoasterLength" class="form-control" />
                <span asp-validation-for="CoasterLength" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CoasterSpeed" class="control-label"></label>
                <input type="number" asp-for="CoasterSpeed" class="form-control" />
                <span asp-validation-for="CoasterSpeed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CoasterInversions" class="control-label"></label>
                <input type="number" asp-for="CoasterInversions" class="form-control" />
                <span asp-validation-for="CoasterInversions" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
