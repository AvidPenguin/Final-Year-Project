@{
    ViewData["Title"] = "Home Page";
}
@inject SignInManager<ApplicationUser> SignInManager

<br />

@if (SignInManager.IsSignedIn(User))
{
    int credits = 0;
    foreach (Credit c in ViewBag.Credits)
    {
        if (c.User == User.Identity.Name)
        {
            credits++;
        }
    }
    <h2 style="text-align:center">Credit Count: @credits</h2>
}

<br />
<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
        <li data-target="#myCarousel" data-slide-to="4"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/img1.png" alt="The Smiler - Alton Towers" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    The Smiler - Alton Towers
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/img2.png" alt="Fury 325 - Carowinds" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Fury 325 - Carowinds
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/img3.png" alt="Millennium Force - Cedar Point" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Millennium Force - Cedar Point
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/img4.png" alt="iSpeed - Mirabilandia" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    iSpeed - Mirabilandia
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/img5.png" alt="Fahrenheit - Hersheypark" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Fahrenheit - Hersheypark
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

